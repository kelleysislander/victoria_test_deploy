- title "Advertisers"

%table
  %tr
    %th Type
    %th Name
    %th Address
    %th{:colspan => 3, :style => "text-align:center;"} Actions

  - @advertisers.each do |advertiser|
    %tr
      %td= advertiser.advertiser_type.advertiser_type
      %td= (advertiser.retailer_id) ? "#{advertiser.retailer.name} (R)" : "#{advertiser.name} (A)"
      %td= (advertiser.retailer_id) ? "#{advertiser.retailer.address}" : "#{advertiser.address}"
      %td= link_to 'Show', advertiser
      %td= link_to 'Edit', edit_advertiser_path(advertiser)
      %td= link_to 'Destroy', advertiser, :confirm => 'Are you sure?', :method => :delete

= paginate @advertisers

%br

= link_to 'New Advertiser', new_advertiser_path

-# #{(a.retailer.id == @advertisement.retailer_id) ? selected="selected" : ""}