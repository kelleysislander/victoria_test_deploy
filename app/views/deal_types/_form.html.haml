.grey-form
  = form_for @deal_type do |f|
    -if @deal_type.errors.any?
      #error_explanation
        %h2= "#{pluralize(@deal_type.errors.count, "error")} prohibited this deal_type from being saved:"
        %ul
          - @deal_type.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :deal_type
      = f.text_field :deal_type
    .field
      = f.label :description
      = f.text_field :description
    .actions
      = submit_button('Save')
