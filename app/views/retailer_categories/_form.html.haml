.grey-form
  = form_for @retailer_category do |f|
    -if @retailer_category.errors.any?
      #error_explanation
        %h2= "#{pluralize(@retailer_category.errors.count, "error")} prohibited this Retailer Category from being saved:"
        %ul
          - @retailer_category.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :retailer_category
      = f.text_field :retailer_category, :size => 60
    .field
      = f.label :description
      = f.text_area :description, :rows => 4, :cols => 60
    .actions
      = submit_button('Save')
